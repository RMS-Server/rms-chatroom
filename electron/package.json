{
  "name": "rms-chat-terminal",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "mgHurryo",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.rms.app",
    "productName": "RMS Chat",
    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis"]
    },
    "mac": {
      "icon": "assets/icon.png",
      "target": ["dmg"],
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Network",
      "maintainer": "RMS Team <admin@rms.net.cn>",
      "synopsis": "RMS Discord Clone - Chat and Voice Application",
      "description": "A Discord-like chat and voice application with RMSSSO authentication"
    },
    "files": [
      "**/*",
      "!frontend/node_modules",
      "!frontend/src"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "RMS-Server",
        "repo": "rms-chatroom"
      }
    ]
  }
}
